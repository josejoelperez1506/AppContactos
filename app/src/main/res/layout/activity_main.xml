<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.joseperez.appcontactos.MainActivity"
    android:id="@+id/main"
    android:background="#ccb255">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="174dp"
        android:id="@+id/grid_main"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escoja una opciÃ³n"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="@string/agregar_text"
        android:id="@+id/agregarbtn"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="onClick"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="@string/listar_text"
        android:id="@+id/listarbtn"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="onListar"
        android:layout_below="@+id/agregarbtn"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Modificar"
        android:id="@+id/modificar_btn"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="premodificar"
        android:layout_below="@+id/listarbtn"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Eliminar"
        android:id="@+id/eliminar_btn"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="onEliminar"
        android:layout_below="@+id/modificar_btn"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

</RelativeLayout>
